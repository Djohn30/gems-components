@import '../../uikit/colors'
@import '../../uikit/font'

.gem-selectregion
  position: relative;

  &-selection
    position: absolute;
    border: 2px dashed color-pink

  &-drag
    box-sizing: border-box;
    position: absolute;

    width: 10px
    height: 10px

    background-color: darken(color-pink, 40%)
    border: 1px solid lighten(color-pink-light, 50%)

    cursor: pointer;

    border-radius: 5px

    transform: translate(-5px, -5px);
