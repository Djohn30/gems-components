@import '../../uikit/colors'
@import '../../uikit/font'

.gem-imagetiles
  position: relative;
  box-sizing: border-box;
  width: 100%;

  &-image
    width: 100%
    margin: 0
    padding: 0

  &-tiles
    box-sizing: border-box;

    position: absolute;
    left: 0
    top: 0
    right: 0
    bottom: 0

  &-tile
    position: absolute;
    display: block;
    box-sizing: border-box;

    background-color: transparent;
    border: 1px solid color-white

    transition: background-color  .2s
    cursor: pointer;

    &:hover
      background-color: rgba(255, 255, 255, 0.2)


    &-selected
      background-color: rgba(255, 255, 255, 0.3)

      &:hover
        background-color: rgba(255, 255, 255, 0.3)
