@import '../../uikit/colors'
@import '../../uikit/font'

.dropdown
  border: 1px solid #C4C4C4;
  width: 100%;
  border-radius: 4px;
  padding: 0 12px

  max-width: 600px

.content
  max-width: 100%
  height: 50px
  display: flex;
  align-items: center;
  justify-content: space-between;

.value
.placeholder
  font(font-preset[subheader])
  flex-grow: 1

  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis


.placeholder
  color: #1C2541
  opacity: 0.5
